
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="Stav ridic 1:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/driverCard1View" />
        <EditText
            android:inputType="numberSigned"
            android:text="007"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/driverCard1Id" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/driverCard1"
            android:prompt="@string/driver_card_state"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Stav ridic 2:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/driverCard2View" />
        <EditText
            android:inputType="numberSigned"
            android:text="008"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/driverCard2Id" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/driverCard2"
            android:prompt="@string/driver_card_state"/>
    </LinearLayout>

</LinearLayout>